{
  "name": "ddt-project-manager",
  "version": "0.0.0",
  "description": "The new Dutch Domino Team Project Manager",
  "main": "index.js",
  "repository": "git@github.com:saphewilliam/ddt-project-manager.git",
  "author": "William Ford <william@saphewebdesign.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build:wasm:debug": "asc --target debug",
    "build:wasm:release": "asc --target release",
    "build:wasm": "rimraf public/wasm && yarn build:wasm:debug && yarn build:wasm:release",
    "build:site": "next build",
    "build": "yarn build:wasm && yarn build:site",
    "start": "next start",
    "lint": "next lint --fix --ext ts --ext tsx --ext graphql && tsc",
    "generate:prisma": "prisma generate",
    "generate:nexus": "yarn tsn --files src/graphql/schema",
    "generate:graphql": "graphql-codegen -r dotenv/config -c .codegenrc.yml",
    "generate": "yarn generate:prisma && yarn generate:nexus && yarn generate:graphql",
    "db:flush": "yarn tsn --files src/graphql/flush",
    "db:seed": "yarn tsn --files src/graphql/seed",
    "db:reset": "yarn db:flush && yarn db:seed",
    "postinstall": "yarn generate",
    "tsn": "ts-node -T -r tsconfig-paths/register -r dotenv/config -O \"{\\\"module\\\":\\\"commonjs\\\"}\""
  },
  "prisma": {
    "seed": "yarn tsn src/graphql/seed.ts"
  },
  "dependencies": {
    "@assemblyscript/loader": "0.19.22",
    "@dicebear/avatars": "4.10.2",
    "@dicebear/avatars-jdenticon-sprites": "4.10.2",
    "@headlessui/react": "1.4.3",
    "@heroicons/react": "1.0.5",
    "@prisma/client": "3.8.1",
    "@saphe/react-table": "0.5.1",
    "apollo-server-micro": "3.6.2",
    "as-bind": "0.8.2",
    "bcrypt": "5.0.1",
    "clsx": "1.1.1",
    "graphql": "<16.0.0",
    "graphql-request": "3.7.0",
    "graphql-scalars": "1.14.1",
    "graphql-tag": "2.12.6",
    "micro": "9.3.4",
    "micro-cors": "0.1.1",
    "nanoid": "3.2.0",
    "next": "12.0.8",
    "nexus": "1.1.0",
    "nexus-prisma": "0.35.0",
    "react": "17.0.2",
    "react-cookie": "4.1.1",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.2.0",
    "react-loading": "2.0.3",
    "react-tooltip": "4.2.21",
    "sass": "1.49.0",
    "sharp": "0.29.3",
    "swr": "1.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@graphql-codegen/cli": "2.4.0",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-graphql-request": "4.3.3",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@graphql-eslint/eslint-plugin": "3.7.0",
    "@tailwindcss/forms": "0.4.0",
    "@tailwindcss/typography": "0.5.0",
    "@types/bcrypt": "5.0.0",
    "@types/micro-cors": "0.1.2",
    "@types/node": "17.0.12",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "assemblyscript": "0.19.22",
    "autoprefixer": "10.4.2",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "graphql-codegen-plugin-typescript-swr": "0.7.2",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "prisma": "3.8.1",
    "tailwind-scrollbar": "1.3.1",
    "tailwindcss": "3.0.17",
    "ts-node": "10.4.0",
