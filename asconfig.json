{
  "entries": ["./src/wasm/index.ts"],
  "targets": {
    "debug": {
      "binaryFile": "public/wasm/debug.wasm",
      "textFile": "public/wasm/debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "binaryFile": "public/wasm/release.wasm",
      "textFile": "public/wasm/release.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 2,
      "converge": false,
      "noAssert": false
    }
  },
  "options": {
    "exportRuntime": true,
    "transform": "as-bind"
  }
}
